<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:background="@color/fabColor"
        android:text="안녕하세요"
        android:textColor="#000000"
        android:textSize="20sp"

        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15sp"
        android:src="@drawable/target"
        android:visibility="visible"
        app:backgroundTint="@color/fabColor" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="90sp"
        android:visibility="visible"
        android:src="@drawable/living"
        app:backgroundTint="@color/fabColor"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />

    <Button
        android:id="@+id/btn_Academy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom|end"
        android:background="#FFFFFF"
        android:text="열기"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/academyPicture"
            android:layout_width="match_parent"
            android:layout_height="247dp" />

        <TextView
            android:id="@+id/academyName"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/back"
            android:text="학원 이름"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/academyAddr"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/back"
            android:text="위치 : 학원 위치"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/academyTime"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/back"
            android:text="오전반 : 10시 30분 ~ 11시 30분\n오후반 : 15시30분 ~ 17시 00분 "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/academyGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:text="방식 : 개인지도"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@drawable/back"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/academyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 : 60000원"
                android:textSize="20sp" />

            <Button
                android:id="@+id/academyBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130sp"
                android:backgroundTint="#4488FF"
                android:text="신청하기" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_open"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/menu" />

    <LinearLayout
        android:id="@+id/drawer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:src="@drawable/exit1"
            android:id="@+id/btn_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/myName1"
            android:text="OOO님 안녕하세요." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_my_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 예약현황" />

            <Button
                android:id="@+id/btn_my_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주소지 변경" />

            <Button
                android:id="@+id/btn_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지사항" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:id="@+id/btn_logout"/>

        </LinearLayout>

    </LinearLayout>




</FrameLayout>